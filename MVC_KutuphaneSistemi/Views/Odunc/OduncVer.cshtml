@model MVC_KutuphaneSistemi.Models.Entity.Hareketler
@{
    ViewBag.Title = "OduncVer";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h2 class="mb-5"><b>Ödünç İşlemleri / </b>Ödünç Kitap Ver</h2>
        <br />
    </div>
    <form method="post" class="form-group">
        <div class="card-body">
            <label>Üye:</label>
            @*@Html.TextBoxFor(k => k.UyeID, new { @class = "form-control" })*@
            @Html.DropDownListFor(k => k.UyeID, (List<SelectListItem>)ViewBag.uyeler, new { @class = "form-control" })

            <br />
            <label>Kitap:</label>
            @*@Html.TextBoxFor(k => k.KitapID, new { @class = "form-control" })*@
            @Html.DropDownListFor(k => k.KitapID, (List<SelectListItem>)ViewBag.kitaplar, new { @class = "form-control" })

            <br />
            <label>Personel:</label>
            @Html.DropDownListFor(k => k.PersonelID, (List<SelectListItem>)ViewBag.personeller, new { @class = "form-control" })
            <br />
            <label>Alış Tarihi:</label>
            <input type="text" name="AlisTarihi" value="@DateTime.Now.ToShortDateString()" class="form-control" />
            <br />
            <label>İade Tarihi:</label>
            <input type="text" name="IadeTarihi" value="@DateTime.Now.AddDays(7).ToShortDateString()" class="form-control" />
            <br />
            <input type="hidden" name="Durum" value="false" />

        </div>

        <div class="card-footer">
            <br />
            <a href="/Odunc/Index/" class="btn btn-danger">Vazgeç</a>
            <button class="btn btn-primary">Ödünç Ver</button>
        </div>
    </form>

</div>
