@model MVC_KutuphaneSistemi.Models.Entity.Mesajlar
@{
    ViewBag.Title = "YeniMesaj";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="mt-5 card">
    <div class="card-header">
        <h2 class=""><b>Mesajlar / </b>Yeni Mesaj Gönder</h2>
        <br />
    </div>
    <form method="post" class="form-group">
        <div class="card-body">
            <label>Alıcı:</label>
            <input type="text" name="Alici" class="form-control" required="" />
            <br />
            <label>Konu:</label>
            <input type="text" name="Konu" class="form-control" required="" />
            <br />
            <label>Mesaj:</label>
<textarea type="text" name="Mesaj" class="form-control" required=""></textarea>

        </div>

        <div class="card-footer">
            <br />
            <a href="/Mesaj/Index/" class="btn btn-danger">Vazgeç</a>
            <button class="btn btn-primary">Gönder</button>
        </div>
    </form>

</div>
