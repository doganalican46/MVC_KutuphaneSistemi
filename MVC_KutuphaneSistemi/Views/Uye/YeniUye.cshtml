@model MVC_KutuphaneSistemi.Models.Entity.Uyeler
@{
    ViewBag.Title = "YeniUye";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h2 class="mb-5"><b>Uyeler / </b>Yeni Uye Ekle</h2>
        <br />
    </div>
    <form method="post" class="form-group">
        <div class="card-body">
            <label>Uye Adı:</label>
            <input type="text" name="Ad" class="form-control" />
            <br />
            <label>Uye Soyadı:</label>
            <input type="text" name="Soyad" class="form-control" />
            <br />
            <label>Uye Mail:</label>
            <input type="text" name="Mail" class="form-control" />
            <br />
            <label>Uye Telefon:</label>
            <input type="text" name="Telefon" class="form-control" />
            <br />
            <label>Uye Okulu:</label>
            <input type="text" name="OkulAdi" class="form-control" />
            <br />
            <label>Kullanıcı Adı:</label>
            <input type="text" name="KullaniciAdi" class="form-control" />
            <br />
            <label>Fotoğraf:</label>
            <input type="text" name="Fotograf" class="form-control" />

            <input type="hidden" name="Durum" value="true" />
        </div>

        <div class="card-footer">
            <br />
            <a href="/Uye/Index/" class="btn btn-danger">Vazgeç</a>
            <button class="btn btn-primary">Ekle</button>
        </div>
    </form>

</div>
