@model MVC_KutuphaneSistemi.Models.Entity.Uyeler
@{
    ViewBag.Title = "UyeGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="card">
    <div class="card-header">
        <h2 class="mb-5"><b>Üyeler / </b>Üye Güncelle</h2>
        <br />
    </div>
    <div class="form-group">
        @using (Html.BeginForm("UyeGuncelle", "Uye", FormMethod.Post))
        {
            <div class="card-body">
                @Html.HiddenFor(k => k.ID)
                <BR />
                <label>Uye Adı:</label>
                @Html.TextBoxFor(k => k.Ad, new { @class = "form-control" })
                <br />
                <label>Uye Soyad:</label>
                @Html.TextBoxFor(k => k.Soyad, new { @class = "form-control" })
                <br />
                <label>Mail:</label>
                @Html.TextBoxFor(k => k.Mail, new { @class = "form-control" })
                <br />
                <label>Telefon:</label>
                @Html.TextBoxFor(k => k.Telefon, new { @class = "form-control" })
                <br />
                <label>Okul Adı:</label>
                @Html.TextBoxFor(k => k.OkulAdi, new { @class = "form-control" })
                <br />
                <label>Kullanıcı Adı:</label>
                @Html.TextBoxFor(k => k.KullaniciAdi, new { @class = "form-control" })
                <br />
                <label>Fotograf:</label>
                @Html.TextBoxFor(k => k.Fotograf, new { @class = "form-control" })
                <br />
                <label>Uye Durum:</label>
                @Html.DropDownListFor(k => k.Durum, new List<SelectListItem>
                {
                    new SelectListItem { Text = "AKTİF", Value = "true" },
                    new SelectListItem { Text = "PASİF", Value = "false" }
                }, new { @class = "form-control" })


            </div>

            <div class="card-footer">
                <br />
                <a href="/Uye/Index/" class="btn btn-danger">Vazgeç</a>
                <button class="btn btn-warning">Güncelle</button>
            </div>
        }
    </div>
</div>

