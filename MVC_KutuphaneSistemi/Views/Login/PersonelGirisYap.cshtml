<body>
    <h2>KÜTÜPHANE SİSTEMİ PERSONEL GİRİŞ EKRANI</h2>
    <div class=" w3l-login-form">
        <h2>Giriş Yap</h2>
        @using (Html.BeginForm("PersonelGirisYap", "Login", FormMethod.Post))
        {
            <div class=" w3l-form-group">
                <label>Mail:</label>
                <div class="group">
                    <i class="fas fa-user"></i>
                    <input type="text" name="Mail" class="form-control" placeholder="Mail" required="required" />
                </div>
            </div>
            <div class=" w3l-form-group">
                <label>Şifre:</label>
                <div class="group">
                    <i class="fas fa-unlock"></i>
                    <input type="password" class="form-control" placeholder="Sifre" name="Sifre" required="required" />
                </div>
            </div>
            <div class="forgot">
                
            </div>
            <button type="submit">GİRİŞ YAP</button>
        }        <p class=" w3l-register-p">Personel değil misiniz?<a href="/Login/GirisYap/" class="register">Üye girişi için tıklayın...</a></p>
        <br />
        <a href="/Vitrin/Index/">Siteye Dön</a>
    </div>


</body>

</html>
