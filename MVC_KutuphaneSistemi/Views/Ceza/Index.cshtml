@using MVC_KutuphaneSistemi.Models.Entity
@model List<Cezalar>
@{
    ViewBag.Title = "Cezalar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h2 class="mb-5"><b>Cezalar / </b>Ceza Listesi</h2>
        <br />
    </div>

    <div class="card-body">
        <table id="DataTable" class="table table-hover" style="width:100%">
            <thead>
                <tr>
                    <th>ÜYE ADI</th>
                    <th>İŞLEM NO</th>
                    <th>GECİKEN GÜN SAYISI</th>
                    <th>TUTAR</th>
                    @*<th>DURUM</th>*@
                    <th>İŞLEM</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ceza in Model)
                {
                    <tr>
                        <td>@ceza.Uyeler.Ad</td>
                        <td>@ceza.HareketID</td>
                        <td>@Convert.ToInt32(ceza.Para)</td>
                        <td>@ceza.Para ₺</td>
                        @*<td style="color: @(ceza.Durum.HasValue && ceza.Durum.Value ? "green" : "red")">
                                @(ceza.Durum.HasValue ? (ceza.Durum.Value ? "AKTİF" : "PASİF") : "N/A")
                            </td>*@
                        <td>  </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="card-footer">
        <br />
        <a href="/Odunc/OduncVer/" class="btn btn-warning">Ödünç Kitap Ver</a>
    </div>
</div>
