@using MVC_KutuphaneSistemi.Models.Entity
@model List<Iletisim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h2 class="mb-5"><b>İletişim / </b>Mesaj Listesi</h2>
        <br />
    </div>

    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <table id="DataTable" class="table table-hover" style="width:100%">
                <thead>
                    <tr>
                        <th>GÖNDEREN</th>
                        <th>MAIL ADRESİ</th>
                        <th>KONU</th>
                        <th>MESAJ</th>
                        <th>TARİH</th>
                        <th>İŞLEMLER</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var iletisim in Model)
                    {
                        <tr>
                            <td>@iletisim.Ad</td>
                            <td>@iletisim.Mail</td>
                            <td>@iletisim.Konu</td>
                            <td>@iletisim.Mesaj</td>
                            <td>@iletisim.Tarih</td>
                            <td>
                                <a href="/Iletisim/CevapVer/@iletisim.ID" class="btn btn-primary">Cevap Ver</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>Mesaj bulunamadı.</p>
        }
    </div>

    <div class="card-footer">
        <br />
    </div>
</div>



